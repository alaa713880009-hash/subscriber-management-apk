<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background">

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="مرحباً"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primary_color"
        android:layout_marginBottom="32dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="4"
            android:columnOrderPreserved="false">

            <Button
                android:id="@+id/subscribers_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="8dp"
                android:text="@string/subscribers"
                android:padding="24dp"
                android:background="@color/primary_color"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/invoices_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_margin="8dp"
                android:text="@string/invoices"
                android:padding="24dp"
                android:background="@color/secondary_color"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/payments_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_margin="8dp"
                android:text="@string/payments"
                android:padding="24dp"
                android:background="@color/success_color"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/messages_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_margin="8dp"
                android:text="@string/messages"
                android:padding="24dp"
                android:background="@color/warning_color"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/reports_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_margin="8dp"
                android:text="@string/reports"
                android:padding="24dp"
                android:background="@color/info_color"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/users_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_margin="8dp"
                android:text="@string/users"
                android:padding="24dp"
                android:background="@color/primary_dark_color"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/settings_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_margin="8dp"
                android:text="@string/settings"
                android:padding="24dp"
                android:background="@color/secondary_dark_color"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/logout_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_margin="8dp"
                android:text="@string/logout"
                android:padding="24dp"
                android:background="@color/error_color"
                android:textColor="@color/white" />

        </GridLayout>

    </ScrollView>

</LinearLayout>
