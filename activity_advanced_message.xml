<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="إرسال رسائل متقدمة"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primary_color"
        android:layout_marginBottom="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- نوع الرسالة -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نوع الرسالة"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/message_type_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="رسالة نصية"
                    android:checked="true" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="رسالة واتساب" />

            </RadioGroup>

            <!-- محتوى الرسالة -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="محتوى الرسالة"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <Button
                    android:id="@+id/template_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="قوالب"
                    android:textSize="12sp"
                    android:padding="8dp"
                    android:background="@color/secondary_color"
                    android:textColor="@color/white" />

            </LinearLayout>

            <EditText
                android:id="@+id/message_input"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="أدخل محتوى الرسالة"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:padding="12dp"
                android:background="@color/white"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/character_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="عدد الأحرف: 0"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="16dp" />

            <!-- المستقبلون -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="المستقبلون"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/select_recipients_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="اختر المستقبلين"
                android:padding="12dp"
                android:background="@color/primary_color"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/selected_recipients_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="لم يتم اختيار أي مستقبلين"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:padding="12dp"
                android:background="@color/white"
                android:layout_marginBottom="16dp" />

            <!-- خيار حفظ الرسالة -->
            <CheckBox
                android:id="@+id/save_message_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="حفظ الرسالة في السجل"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp" />

            <!-- أزرار المعاينة والإرسال -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/preview_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="معاينة"
                    android:padding="12dp"
                    android:background="@color/secondary_color"
                    android:textColor="@color/white"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/send_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="إرسال"
                    android:padding="12dp"
                    android:background="@color/success_color"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
